{
  "name": "create-arco",
  "version": "0.2.3",
  "description": "A template to quickly initialize an Arco project",
  "author": "oljc <ljc.byte@gmail.com>",
  "main": "dist/index.cjs",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "dev": "node ./scripts/build.mjs --dev",
    "build": "node ./scripts/build.mjs",
    "start": "node dist/index.cjs",
    "release": "pnpm run build && standard-version"
  },
  "files": [
    "dist",
    "templates",
    "LICENSE"
  ],
  "bin": {
    "create-arco": "./dist/index.cjs"
  },
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=v18.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oljc/create-arco.git"
  },
  "bugs": {
    "url": "https://github.com/oljc/create-arco/issues"
  },
  "homepage": "https://github.com/oljc/create-arco",
  "keywords": [
    "create-arco-pro",
    "create-arco",
    "arco-pro",
    "template",
    "arco"
  ],
  "license": "MIT",
  "dependencies": {
    "sisteransi": "^1.0.5",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.10.5",
    "esbuild": "^0.24.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
